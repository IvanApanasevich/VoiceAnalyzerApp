<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_selected_background"/> <!-- Color when selected -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/nothing_on_surface"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/nothing_surface"/> <!-- Default background -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/nothing_on_surface"/>
        </shape>
    </item>
</selector>